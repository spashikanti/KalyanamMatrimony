@model PaymentViewModel

@{
    ViewBag.Title = "Update License";
    Layout = "~/Views/Shared/_LayoutLicense.cshtml";
}


<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-Active" role="tabpanel" aria-labelledby="pills-Active-tab">
        <div class="card shadow mb-4 border-primary">
            <div class="card-header bg-primary text-white">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="font-weight-bold text-white">Payment</h5>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @*<label asp-for="LicenseId" class="small mb-1"></label>
                                <select asp-for="LicenseId" class="form-control"
                                        asp-items="@(new SelectList(@ViewBag.LicenseTypes, "Price", "Description"))">
                                </select>
                                <span asp-validation-for="LicenseId" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="card">
                                <div class="card-header">
                                    <strong>Order Summary</strong>
                                </div>
                                <div class="card-body">
                                    <div class="form-row">
                                        <div class="col-md-7">
                                            <div class="form-group">
                                                <div id="purpose">@Model.Description</div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <div id="lblPrice">@Model.Amount</div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-row">
                                        <div class="col-md-7">
                                            <div class="form-group">
                                                <strong>Total</strong>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <div id="amount">@Model.Amount</div>
                                            </div>
                                        </div>
                                    </div>
                                    Subtotal does not include applicable taxes.
                                    <hr />
                                    <div class="form-row right">
                                        <div class="col-md-12">
                                            <div class="text-right">
                                                <a href="@Model.PaymentURL" rel="im-checkout" data-text="Pay" class="btn btn-success im-checkout">Pay</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<div class="form-group text-lg-right">
                                <button type="button" class="btn btn-primary" onclick="nextTab();">Next</button>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <style>
        .im-checkout {
            max-width: 300px;
            margin-bottom: 0px !important;
        }
    </style>
    <script src="~/js/CustomScript.js"></script>
    @*For toast*@
    <link href="/lib/toastr/toastr.min.css" rel="stylesheet" />
    <script src="/lib/toastr/toastr.min.js"></script>
    <script>
        //For toast
        var msg = @Html.Raw(Json.Serialize(ViewBag.Message));
        if (msg != null) {
            displayToast(msg);
        }
    </script>
}