@model RegisterViewModel

@{
    ViewBag.Title = "Create Profile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-7">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header justify-content-center">
            <h3 class="font-weight-light my-4">@ViewBag.Title</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="small mb-1"></label>
                    <input asp-for="Email" class="form-control py-4" placeholder="Enter email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Password" class="small mb-1"></label>
                            <input asp-for="Password" class="form-control py-4" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="small mb-1"></label>
                            <input asp-for="ConfirmPassword" class="form-control py-4" placeholder="Confirm password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="small mb-1"></label>
                    <input asp-for="EndDate" class="form-control py-4" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group mt-4 mb-0">
                    @*<a class="btn btn-primary btn-block">Create Profile</a>*@
                    <button type="submit" class="btn btn-primary btn-block">Create Profile</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <div class="small">
                @*<a href="login-basic.html">Have an account? Go to login</a>*@
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}