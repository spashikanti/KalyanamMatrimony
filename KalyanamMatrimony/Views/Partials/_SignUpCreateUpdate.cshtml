@model SignUpViewModel


        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <!-- <div class="col-lg-6 d-none d-lg-block bg-login-image"></div> -->
                <div class="col-lg-12">
                    <div class="p-5">
                        @*<div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">@ViewData["Title"]</h1>
                        </div>*@
                        <form method="post" class="user">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="OrgName" class="small mb-1"></label>
                                        <input asp-for="OrgName" class="form-control " placeholder="Organization Name" />
                                        <span asp-validation-for="OrgName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="FullName" class="small mb-1"></label>
                                        <input asp-for="FullName" class="form-control " placeholder="Contact Person Name" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Phone" class="small mb-1"></label>
                                        <input asp-for="Phone" class="form-control " placeholder="Contact Person Phone" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Email" class="small mb-1"></label>
                                        <input asp-for="Email" class="form-control " placeholder="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Password" class="small mb-1"></label>
                                        <input asp-for="Password" class="form-control" placeholder="Enter password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="ConfirmPassword" class="small mb-1"></label>
                                        <input asp-for="ConfirmPassword" class="form-control " placeholder="Confirm password" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            @*<div class="form-row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="LicenseId" class="small mb-1"></label>
                    <select asp-for="LicenseId" class="form-control"
                            asp-items="@(new SelectList(@ViewBag.LicenseTypes, "Price", "Description"))">

                    </select>
                    <span asp-validation-for="LicenseId" class="text-danger"></span>
                </div>
            </div>
        </div>*@
                            @*<button id="btnSignUp" type="submit" class="btn btn-primary btn-block">
                                Save
                            </button>*@
                            <div class="form-row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success btn-block" id="btnSignUp">
                                            <strong>Save</strong>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <a class="btn btn-danger btn-block" asp-controller="SuperAdmin" asp-action="ViewLicenses"><strong>Cancel</strong></a>
                                    </div>
                                </div>
                            </div>
                            @if (@Model != null && @Model.OrgId > 0)
                            {
                                <input asp-for="OrgId" type="hidden" />
                            }
                            @if (@Model != null && !string.IsNullOrEmpty(@Model.UserId))
                            {
                                <input asp-for="UserId" type="hidden" />
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>

@section Scripts{
    <script>
        document.getElementById("btnLogin").addEventListener("click", function (event) {
            if (document.getElementById("Email").value == "" || document.getElementById("Password").value == "") {
                event.preventDefault();
                var x = document.getElementsByClassName("validation-summary-valid")[0];
                x.innerHTML = "";
                x.append("Please provide login credentials!!!");
            }
        });

        debugger;
        var qs = location.search;

        if (qs != null && qs != undefined) {
            if (qs.split("=")[1] == "view") {
                $("#btnSignUp").hide();
                $(".btn-danger").hide();
            }
        }

    </script>
}